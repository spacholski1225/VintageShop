@model IEnumerable<VintageShop.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by album: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to full list</a>
        </p>
    </div>

</form>
<div class="card-columns">

    @foreach (var item in Model)
    {
        <div  class="card">
            <div class="card-img" style="background-image: url('@item.ImageUrl');" >
                <div  class="card-body">
                    <a class="card-link" asp-controller="Albums" asp-action="Details" asp-route-id="@item.AlbumID"> @item.Name</a>
                </div>
            </div>
        </div>
    }

</div>


